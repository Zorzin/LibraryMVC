@using LibraryMVC.Resources
@model IEnumerable<Library.Models.SearchHistory>

@{
    ViewBag.Title = Language_Searches.SavedSearches;
}

<h2>@ViewBag.Title:</h2>
@if (Model.Any())
{
    <div class="list-group" style="margin-top:10px ">

        @foreach (var item in Model)
        {
            <a href="@Url.Action("Load","Books",new {id=item.SearchHistoryID},null)" class="list-group-item">
                @item.Name
            </a>
        }
    </div>

}
else
{
<p>@Language_Searches.NoSearches.</p>
}

