@model IEnumerable<Library.Models.SearchHistory>

@{
    ViewBag.Title = "Index";
}

<h2>Saved Searches</h2>
@if (Model.Any())
{
    <table class="table">
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Reader)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Reader.Name)
                    </td>
                }
                <td>
                    @Html.ActionLink(item.Name, "Load", "Books", new { id = item.SearchHistoryID }, new { @class = "btn btn-info" })
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SearchHistoryID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SearchHistoryID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SearchHistoryID })
                    </td>
                }
            </tr>
        }

    </table>
}
else
{
    <p> You don't saved anything yet.</p>
}

