@using LibraryMVC.Resources
@model IEnumerable<Library.Models.Label>

@{
    ViewBag.Title = Language_Books.Labels;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Language_Labels.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(Language_Labels.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(Language_WorkerPanel.Edit, "Edit", new { id=item.LabelID }) |
            @Html.ActionLink(Language_WorkerPanel.Details, "Details", new { id=item.LabelID }) |
            @Html.ActionLink(Language_WorkerPanel.Delete, "Delete", new { id=item.LabelID })
        </td>
    </tr>
}

</table>
