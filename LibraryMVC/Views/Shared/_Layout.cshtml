                    <li>@Html.ActionLink(Language_Shared.Contact, "Contact", "Home")</li>
                    <li>@Html.ActionLink(Language_Shared.Books, "Index", "Books")</li>
                    @if (Roles.IsUserInRole(User.Identity.Name,"Worker"))
                    {
                        <li>@Html.ActionLink(Language_Shared.WorkerPanel, "Index","WorkerPanel")</li>
                    }
                    
                </ul>
                <ul class="nav nav-tabs navbar-right">
                    <li><a href="@Url.Action("Change", "Language", new {language = "en"}, null)"><img height="15" src="~/images/eng.jpg" /></a></li>
                    <li><a href="@Url.Action("Change", "Language", new {language = "pl"}, null)"><img height="15" src="~/images/pl.jpg" /></a></li>
                    <li><a href="@Url.Action("Change", "Language", new {language = "cz"}, null)"><img height="15" src="~/images/cz.jpg" /></a></li>

