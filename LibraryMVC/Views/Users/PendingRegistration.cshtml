@using LibraryMVC.Resources
@model IEnumerable<LibraryMVC.Models.User>

@{
    ViewBag.Title = Language_WorkerPanel.PendingRegistrations;
}

<h2>@ViewBag.Title:</h2>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName(Language_User.Name)
            </th>
            <th>
                @Html.DisplayName(Language_User.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName(Language_User.UserName)
            </th>
            <th>
                @Html.DisplayName(Language_User.EmailConfirmed)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>

                <td>
                    @Html.ActionLink(Language_User.Consider, "Confirm", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

}
else
{
    <p>No pending registrations</p>
}
