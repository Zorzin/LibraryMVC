@using LibraryMVC.Resources
@model Library.Models.Category

@{
    ViewBag.Title = Language_Categories.CategoryDetails;
}

<h2>@ViewBag.Title:</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Language_Categories.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayName(Language_Categories.OverCategory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OverCategory.Name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink(Language_WorkerPanel.BackToList, "Index", null, new { @class = "btn btn-info" })
    @Html.ActionLink(Language_WorkerPanel.Edit, "Edit", new {id = Model.CategoryID}, new {@class = "btn btn-info"})

</p>
