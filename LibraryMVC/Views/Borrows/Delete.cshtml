@using LibraryMVC.Resources
@model Library.Models.Borrow

@{
    ViewBag.Title = Language_WorkerPanel.Delete;
}

<h2>@Language_Basket.DeleteLong</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Language_Basket.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt>
            @Html.DisplayName(Language_Basket.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reader.Name)
        </dd>

        <dt>
            @Html.DisplayName(Language_Basket.BorrowDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>

        <dt>
            @Html.DisplayName(Language_Basket.ReturnDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>

        <dt>
            @Html.DisplayName(Language_Basket.Deadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deadline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink(Language_WorkerPanel.BackToList, "Index", null, new { @class = "btn btn-info" })
            <input type="submit" value=@Language_WorkerPanel.Delete class="btn btn-danger"/>

        </div>
    }
</div>
