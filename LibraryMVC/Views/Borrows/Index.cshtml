@using LibraryMVC.Resources
@model IEnumerable<Library.Models.Borrow>

@{
    ViewBag.Title = Language_WorkerPanel.Borrows;
}

<h2>@ViewBag.Title:</h2>

<p>
    @Html.ActionLink(Language_Basket.CreateNew, "Create",null, new { @class = "btn btn-success" })
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName(Language_Basket.Title)
            </th>
            <th>
                @Html.DisplayName(Language_Basket.Name)
            </th>
            <th>
                @Html.DisplayName(Language_Basket.BorrowDate)
            </th>
            <th>
                @Html.DisplayName(Language_Basket.ReturnDate)
            </th>
            <th>
                @Html.DisplayName(Language_Basket.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reader.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink(Language_WorkerPanel.Edit, "Edit", new { id = item.BorrowID }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink(Language_WorkerPanel.Details, "Details", new { id = item.BorrowID }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink(Language_WorkerPanel.Delete, "Delete", new { id = item.BorrowID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>@Language_Basket.NoBorrows</p>
}

