@using LibraryMVC.Resources
@model LibraryMVC.Models.SendCodeViewModel
@{
    ViewBag.Title = Language_Account.Send;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@Language_Account.SendVerificationCode</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @Language_Account.SelectTwoFactorAuthProvider
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value=@Language_Account.Submit class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
