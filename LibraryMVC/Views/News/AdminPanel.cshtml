@model IEnumerable<LibraryMVC.Models.News>
@using LibraryMVC.Resources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink(@Language_News.CreateNew, "Create",null, new {@class ="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(@Language_News.Title)
        </th>
        <th>
            @Html.DisplayName(@Language_News.Content)
        </th>
        <th>
            @Html.DisplayName(@Language_News.AddDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (item.Content.Length > 10)
            {
                @Html.Raw(item.Content.Substring(0, 10))
                @Html.Raw("...")
            }
            else
            {
               @Html.DisplayFor(modelItem => item.Content)
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        <td>
            @Html.ActionLink(@Language_News.Edit, "Edit", new { id=item.NewsID }, new {@class="btn btn-info"})
            @Html.ActionLink(@Language_News.Delete, "Delete", new { id=item.NewsID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
